generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  account Account?
}

model Account {
  id Int @id @default(autoincrement())
  balance Decimal @default(0.0) @db.Decimal(10,2)

  userId Int @unique

  sentTransfers Transfer[] @relation("senderTransfers")
  receivedTransfers Transfer[] @relation("recipientTransfers")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Transfer {
  id Int @id @default(autoincrement())

  amount Decimal @db.Decimal(10,2)

  senderAccountId Int
  recipientAccountId Int

  sender Account @relation("senderTransfers", fields: [senderAccountId], references: [id])
  recipient Account @relation("recipientTransfers", fields: [recipientAccountId], references: [id])

}